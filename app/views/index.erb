<div class='button'>
<form action = "/user/<%= @user %>/profile" method="get">
  <input type ="submit" value="Profile Page" class="pure-button pure-button-primary">
</form>
<br>
<br>
<form action = "/logout" method="post">
  <input type ="submit" value="Log Out" class="pure-button pure-button-primary">
</form>
</div>

<div class='container'>
<h1>News Feed</h1>


    <h2> Everyone's Posts</h2>
<div class="post">
  <% @post.each do |post|%>
      <% @users.each do |user|%>
      <div class="image">
        <a href = "/user/<%= user.id %>/profile"> <img src="<%= user.image %>" height="40px" width="40px"/></a>
      </div>
      <div class="user_name">
        <p><%= user.name %></p>
      </div>
        <p><%= post.content %></p>
        <p>Created at: <%= post.created_at %></p>
        <div class"follow_and_user_button"
          <form action = "/user/<%= user.id %>/profile" method="get">
          <input type ="submit" value="User: <%= User.find(user.id).name %>" class="pure-button pure-button-primary">
          <br>
          </form>
          <form action = "/follow/<%= user.id %>" method="post">
            <input type ="submit" value="Follow" class="pure-button pure-button-primary">
          </form>
        </div>
      <% end %>
  <% end %>
</div>
