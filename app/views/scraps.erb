    <h2> Everyone's Posts</h2>
  <% @post.each do |post|%>
    <% @users.each do |user|%>
      <div class="post">
        <div class="image">
          <a href = "/user/<%= user.id %>/profile"> <img src="<%= user.image %>" height="40px" width="40px"/></a>
        </div>
        <div class="follow_and_user_button">
          <br>
          <% if !User.find(session[:user_id]) %>
            <form action = "/follow/<%= user.id %>" method="post">
              <input type ="submit" value="Follow" class="pure-button pure-button-primary">
            </form>
          <%end%>
        </div>
        <div class="user_name">
          <p><%= user.name %></p>
        </div>
        <br>
        <div class="post_content">
          <p><%= post.content %></p>
          <p>Created at: <%= post.created_at.getlocal %></p>
        </div>
      </div>
      <br>
    <% end %>
  <% end %>
</div>
